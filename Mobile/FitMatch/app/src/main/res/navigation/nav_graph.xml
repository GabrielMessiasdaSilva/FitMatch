<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.fitmatch.mobile.ui.login.LoginFragment"
        android:label="Login">

        <!-- ✅ AÇÃO QUE ESTÁ FALTANDO -->
        <action
            android:id="@+id/action_login_to_teams"
            app:destination="@id/teamListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/teamListFragment"
        android:name="com.example.fitmatch.ui.teams.TeamListFragment"
        android:label="Times" />
</navigation>
