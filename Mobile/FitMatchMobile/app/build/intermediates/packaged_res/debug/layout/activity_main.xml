    <Button android:id="@+id/btn_teams" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Buscar Times Próximos" android:layout_marginTop="8dp"/>
    <Button android:id="@+id/btn_history" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Histórico de Jogos" android:layout_marginTop="8dp"/>

</LinearLayout>
