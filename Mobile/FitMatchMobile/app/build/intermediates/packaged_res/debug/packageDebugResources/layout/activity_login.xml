<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/fit_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="FITMATCH"
        android:textColor="@color/fit_yellow"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_email"
        android:hint="Seu email"
        android:textColorHint="#aaaaaa"
        android:textColor="@color/fit_white"
        android:padding="16dp"
        android:background="@drawable/fit_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_password"
        android:hint="Sua senha"
        android:inputType="textPassword"
        android:textColorHint="#aaaaaa"
        android:textColor="@color/fit_white"
        android:padding="16dp"
        android:background="@drawable/fit_input"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_login"
        android:text="Entrar"
        android:textColor="@color/fit_black"
        android:backgroundTint="@color/fit_yellow"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_signup"
        android:text="Criar uma conta"
        android:textColor="@color/fit_yellow"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
