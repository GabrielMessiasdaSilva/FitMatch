<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitmatch.mobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="FitMatch"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitMatch">

        <!-- LOGIN é a PRIMEIRA tela -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- Cadastro -->
        <activity android:name=".RegisterActivity"/>

        <!-- Tela principal (MENU) | ANTES MainActivity — ERRADO -->
        <activity android:name=".HomeActivity"/>

        <!-- Telas internas -->
        <activity android:name=".ui.HistoryActivity"/>
        <activity android:name=".ui.TeamDetailActivity"/>
        <activity android:name=".ui.TeamsActivity"/>
        <activity android:name=".ui.ProfileActivity"/>

        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>
