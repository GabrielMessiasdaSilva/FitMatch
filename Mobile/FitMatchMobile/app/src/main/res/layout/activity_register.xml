<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fit_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Crie sua Conta"
            android:textColor="@color/fit_yellow"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/sp_type"
            android:background="@drawable/fit_input"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_email"
            android:hint="Seu email"
            android:layout_marginTop="16dp"
            android:background="@drawable/fit_input"
            android:textColor="@color/fit_white"
            android:textColorHint="#aaaaaa"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_pass"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:background="@drawable/fit_input"
            android:padding="16dp"
            android:textColor="@color/fit_white"
            android:textColorHint="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_create"
            android:text="Criar Conta"
            android:backgroundTint="@color/fit_yellow"
            android:textColor="@color/fit_black"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_login"
            android:text="JÃ¡ tenho conta"
            android:textColor="@color/fit_yellow"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
